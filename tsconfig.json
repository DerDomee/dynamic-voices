{
	"compilerOptions": {
		"module": "ES2022",
		"esModuleInterop": true,
		"target": "es2021",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"lib": [
			"ES2022",
		],
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}
